#!/bin/bash
#--------------------------------------------------------------------------
# pgodb_compile
#	Copy and compile Postgres ODBC driver
#	Copyright (c) 2010-2013, Michael Paquier
#
#	The code used for compilation is a copy of an original code. No fancy
#	options are supported for simplicity and because pgodbc is not that
#	much a huge code. Feel free to change manually this code for punctual
#	development.
#--------------------------------------------------------------------------

# Remove the old source directory
echo "Removing old source dir at $HOME_PGODBC_MAKE"
rm -rf $HOME_PGODBC_MAKE

echo "Copying source $HOME_PGODBC_SRC to $HOME_PGODBC_MAKE"
cp -r $HOME_PGODBC_SRC $HOME_PGODBC_MAKE

# Begin compilation and install
cd $HOME_PGODBC_MAKE

# perform the installation
autoreconf -i
./configure --prefix=$HOME_PGODBC_INSTALL CFLAGS="-DG"
make
make install
