#!/bin/bash
#--------------------------------------------------------------------------
# git_filter
#	Small utility to change commit data in a GIT repository
#	Copyright (c) 2010-2012, Michael Paquier
#--------------------------------------------------------------------------
git filter-branch --env-filter '

an="$GIT_AUTHOR_NAME"
am="$GIT_AUTHOR_EMAIL"
cn="$GIT_COMMITTER_NAME"
cm="$GIT_COMMITTER_EMAIL"

if [ "$GIT_COMMITTER_EMAIL" = "catacomb@otacoo.com" ]
then
    an="Michael Paquier"
    am="michael@otacoo.com"
    cn="Michael Paquier"
    cm="michael@otacoo.com"
fi
if [ "$GIT_AUTHOR_EMAIL" = "catacomb@otacoo.com" ]
then
    an="Michael Paquier"
    am="michael@otacoo.com"
    cn="Michael Paquier"
    cm="michael@otacoo.com"
fi

export GIT_AUTHOR_NAME="$an"
export GIT_AUTHOR_EMAIL="$am"
export GIT_COMMITTER_NAME="$cn"
export GIT_COMMITTER_EMAIL="$cm"
'
