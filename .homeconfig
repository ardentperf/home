# Global etc folder for all programs containing usually generic
# configuration files that can be fetched by development environments.
export HOME_GLOBAL_ETC=$HOME/etc

# Folder where are located various stable installation versions
export HOME_STABLE_BIN=$HOME/bin/stable

# PostgreSQL development parameters
export HOME_POSTGRES_SRC=$HOME/git/postgres
export HOME_POSTGRES_INSTALL=$HOME/bin/pgsql
export HOME_POSTGRES_ETC=$HOME_GLOBAL_ETC/postgres.d
export HOME_POSTGRES_DATA=$HOME/data
export HOME_POSTGRES_ARCHIVE=$HOME/archive

# PostgreSQL library path
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$HOME_POSTGRES_INSTALL/lib
# To SGML catalogs for PostgreSQL documentation
export SGML_CATALOG_FILES=/etc/sgml/catalog:/usr/share/sgml/jade/catalog

# Add Postgres binaries to path
export PATH=$HOME_POSTGRES_INSTALL/bin:$PATH

# Add Postgres man pages to MANPATH
export MANPATH=$HOME_POSTGRES_INSTALL/share/man:$MANPATH

# Global base repository for ccache
export HOME_CCACHE_DIR=$HOME/bin/ccache

# Global variables for asciidoc
export ASCIIDOC=asciidoc
export XMLTO=xmlto

# Add other parameters publicly visible here if necessary
