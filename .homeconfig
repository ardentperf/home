# Global make path for all binaries
export HOME_GLOBAL_MAKE=$HOME/make

# Folder where are located various stable installation versions
export HOME_STABLE_BIN=$HOME/bin/stable

# PostgreSQL development parameters
export HOME_POSTGRES_SRC=$HOME/git/postgres
export HOME_POSTGRES_MAKE=$HOME_GLOBAL_MAKE/postgres
export HOME_POSTGRES_INSTALL=$HOME/bin/pgsql
# PostgreSQL library path
export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$HOME_POSTGRES_INSTALL/lib
# To SGML catalogs for PostgreSQL documentation
export SGML_CATALOG_FILES=/etc/sgml/catalog:/usr/share/sgml/jade/catalog

# pg_top development parameters
export HOME_PG_TOP_SRC=$HOME/git/pg_top
export HOME_PG_TOP_MAKE=$HOME_GLOBAL_MAKE/pg_top
export HOME_PG_TOP_INSTALL=$HOME/bin/pgsql

# Add Postgres binaries to path
export PATH=$HOME_POSTGRES_INSTALL/bin:$PATH

